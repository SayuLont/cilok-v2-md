{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["standard"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"no-param-reassign": ["error", { "props": false }],
		"no-useless-catch": 0,
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"linebreak-style": ["error", "windows"],
		"indent": ["error", 4],
		"semi": ["error", "always"]
	}
}
